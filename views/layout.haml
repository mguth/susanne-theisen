!!! 5
%html{ :lang => "de" }
  %head
    %meta{ :charset => "utf-8" }    

    / Always force latest IE rendering engine (even in intranet) & Chrome Frame
    %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ :content => "width=device-width; initial-scale=1.0", :name=>"viewport" }
    %meta{ :content => "(c) 2011 Copyright content: Susanne Theisen Copyright design: Moritz Guth", :name=>"Copyright" }
    %meta{:content => "Journalismus, Corporate Publishing, Reportagen, Print, TV, Hörfunk, Internet, Gesundheit, Soziales, Kultur, Blogs, Social Media", :name => "Keywords"}
    %meta{:content => "Portfolio von Susanne Theisen, Journalistin in Berlin für Print, TV, Hörfunk, Online und Corporate Publishing", :name => "Description"}

    = yield_content :head

    = stylesheet_link_tag "site.css"

    <script type="text/javascript" src="http://use.typekit.com/xud6jax.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    /[if lte IE 8]
      :javascript
        'article aside footer header nav section time'.replace(/\w+/g,function(n){document.createElement(n)})


  %body{ :class => page_classes }
    #page{:style=>"#{@page_background.presence}"}
      = render('partials/_header')

      #main{ :role => "main" }
        = yield

      = render('partials/_footer')
      = yield_content :page_content

    = render('partials/_javascripts')
    -#  Append your own using content_for :javascripts
    = yield_content :javascripts
    
